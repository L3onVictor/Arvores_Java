package ListaCircular;

public class Lista {
	No ref;

	public Lista() {
		this.ref = null;
	}

	public void insere(int valor) {
		No novo = new No(valor);
		if (ref == null) {
			this.ref = novo;
			ref.setProx(ref);
			return;
		}
		if(valor < ref.getValor()) {
			for(No aux = ref.getProx(); aux != ref; aux = ref.getProx()) {
				aux.setProx(novo);
				novo.setProx(ref);
				
			}
		}
	}
	public void imprimi() {
		for(No aux = ref.getProx(); aux != ref.getProx();aux = ref.getProx()) {
			System.out.print(aux.getValor() + "");
		}
		System.out.println();
	}
}
