package ListaCircular;

public class Lista {
	No ref;

	public Lista() {
		this.ref = null;
	}

	public void insere(int valor) {
		No novo = new No(valor);
		if (ref == null) {
			this.ref = novo;
			ref.setProx(ref);
			return;
		}
		if(valor < ref.getProx().getValor()) {
				novo.setProx(ref.getProx());
				ref.setProx(novo);
				return;
		}
		
		for(No aux = ref; aux.getProx() != ref && aux.getProx().getValor() < valor; aux = aux.getProx()) {
			aux.setProx(novo);
			novo.setProx(aux.getProx());
			return;
		}
		if(valor >= ref.getValor()) {
			ref=novo;
			return;
		}
	}
	public void imprimi() {
		
		if(ref == null) {
			System.out.println("Lista vazia!");
		}
		
		for(No aux = ref.getProx(); aux != ref;aux = aux.getProx()) {
			System.out.print(aux.getValor() + " ");
		}
		System.out.println();
	}
}
