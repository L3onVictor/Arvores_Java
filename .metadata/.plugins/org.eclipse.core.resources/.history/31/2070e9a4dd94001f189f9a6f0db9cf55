package Encadeada;

public class Lista {
	No ref;



	public void add(int info) {
		No novoNo = new No(info);
		if(this.ref == null) {
			ref = novoNo;
		}else {
			No refAtual = ref;
			
			while(refAtual.prox != null) {
				refAtual = refAtual.prox;
			}
			refAtual.prox = novoNo;
		}
				
	}
	public void imprime() {
		if(ref == null) {
			System.out.println("A lista est√° vazia!");
			return;
		}
		No aux = ref;
		while(aux != null) {
			System.out.println(aux.valor);
			aux = aux.prox;
		}
	}
}
